     <table id="datatable" class="table table-striped table-bordered jambo_table bulk_action">       
          <thead>
              <th>Num Employe</th>
              <th>Nom</th>
              <th>Addresse</th>
              <th>Salaire</th>

          </thead>
         <tbody>
             @{
                 Double somme = 0;
                 int nombre = 0;
                 Double nbJour = 21.42;
                 Double salaireJbjour = 0;
               }
                  @foreach (var employe in Model.allEmploye)
                    {
                      <tr>
                            <td>@employe.numEmploye</td>
                            <td>@employe.nom</td>  
                            <td>@employe.addresse</td>  
                            <td>
                                @{salaireJbjour = (employe.salaire)*nbJour;}
                                 @salaireJbjour<small>Ar</small></td> 
                          
                     </tr>                          
                        somme += salaireJbjour;
                        nombre++;                                          
                    }
             <tr>
                 <td><b>Nombre d'Employé:</b>

                 </td><td colspan="4"><b>@nombre</b></td>

             </tr>
             <tr>
                 <td><b>Salaire Globaux:</b>

                 </td><td colspan="4"><b>@somme</b> Ar</td>

             </tr>
         </tbody>
    </table>
